<div class="container" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; max-width: 1200px; margin: 30px auto; padding: 20px; box-shadow: 0 0 20px rgba(0,0,0,0.1); border-radius: 10px; background: white;">
  <style>
    .styled-table {
      width: 100%;
      border-collapse: collapse;
      margin: 25px 0;
      font-size: 0.9em;
      min-width: 400px;
      border-radius: 5px 5px 0 0;
      overflow: hidden;
    }
    .styled-table thead tr {
      background-color: #2c3e50;
      color: #ffffff;
      text-align: left;
      font-weight: bold;
    }
    .styled-table th,
    .styled-table td {
      padding: 12px 15px;
      border-bottom: 1px solid #dddddd;
    }
    .styled-table tbody tr:nth-of-type(even) {
      background-color: #f3f3f3;
    }
    .styled-table tbody tr:last-of-type {
      border-bottom: 2px solid #2c3e50;
    }
    .styled-table tbody tr:hover {
      background-color: #e1f5fe;
      cursor: pointer;
    }
    .btn {
      display: inline-block;
      padding: 6px 12px;
      margin-bottom: 0;
      font-size: 14px;
      font-weight: 400;
      line-height: 1.42857143;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      cursor: pointer;
      border: 1px solid transparent;
      border-radius: 4px;
      text-decoration: none;
    }
    .btn-primary {
      color: #fff;
      background-color: #3498db;
      border-color: #2980b9;
    }
    .btn-primary:hover {
      background-color: #2980b9;
    }
    .btn-sm {
      padding: 5px 10px;
      font-size: 12px;
      line-height: 1.5;
      border-radius: 3px;
    }
    .btn-info {
      color: #fff;
      background-color: #17a2b8;
      border-color: #117a8b;
    }
    .btn-info:hover {
      background-color: #138496;
    }
    .btn-secondary {
      color: #fff;
      background-color: #6c757d;
      border-color: #5a6268;
    }
    .btn-secondary:hover {
      background-color: #5a6268;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #eee;
    }
    .mb-3 {
      margin-bottom: 1rem !important;
    }
  </style>
  
  <h1 style="color: #2c3e50; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #eee;">Facturas</h1>
  
  <%= link_to 'Nueva Factura', facturacion_nueva_path, class: 'btn btn-primary mb-3', style: "display: inline-block; padding: 6px 12px; margin-bottom: 1rem; font-size: 14px; font-weight: 400; line-height: 1.42857143; text-align: center; white-space: nowrap; vertical-align: middle; cursor: pointer; border: 1px solid transparent; border-radius: 4px; text-decoration: none; color: #fff; background-color: #3498db; border-color: #2980b9;" %>

  <table class="styled-table">
    <thead>
      <tr>
        <th>NÃºmero</th>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Total</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @facturas.each do |factura| %>
        <tr>
          <td><%= factura[:numero] %></td>
          <td><%= factura[:fecha] %></td>
          <td>
            <% cliente = @clientes.find { |c| c[:id] == factura[:cliente_id] } %>
            <%= cliente ? cliente[:nombre] : 'Cliente no encontrado' %>
          </td>
          <td style="font-weight: bold; color: #27ae60;">
            <% items = factura[:items] %>
            <% subtotal = items.sum { |i| i[:precio_unitario] * i[:cantidad] } %>
            $<%= '%.2f' % subtotal %>
          </td>
          <td>
            <%= link_to 'Ver', facturacion_mostrar_path(numero: factura[:numero]), class: 'btn btn-sm btn-info', style: "display: inline-block; padding: 5px 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; color: #fff; background-color: #17a2b8; border-color: #117a8b; text-decoration: none;" %>
            <%= link_to 'PDF', facturacion_pdf_path(numero: factura[:numero], format: :pdf), class: 'btn btn-sm btn-secondary', style: "display: inline-block; padding: 5px 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; color: #fff; background-color: #6c757d; border-color: #5a6268; text-decoration: none;", target: '_blank' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>